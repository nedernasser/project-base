{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"],
      "@models/*": ["models/*"],
      "@lib/*": ["lib/*"],
      "@const/*": ["consts/*"],
      "@services/*": ["services/*"],
      "@external/*": ["services/external/*"]
    },
    "types": ["@types/node"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
